{
  // Diamonds VS Code Settings
  // Optimized for TypeScript, Solidity, and blockchain development
  // Editor settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.suggest.showKeywords": false,
  "editor.suggest.showSnippets": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  // File associations
  "files.associations": {
    "*.sol": "solidity",
    "hardhat.config.ts": "typescript",
    "hardhat.config.js": "javascript",
    "*.config.ts": "typescript",
    "*.config.js": "javascript",
    ".eslintrc": "json",
    ".prettierrc": "json",
    "tsconfig.json": "jsonc"
  },
  // TypeScript settings
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.quoteStyle": "double",
  "typescript.format.semicolons": "insert",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  // JavaScript settings
  "javascript.preferences.includePackageJsonAutoImports": "auto",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "double",
  "javascript.format.semicolons": "insert",
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  // Solidity settings
  "solidity.compileUsingRemoteVersion": "0.8.19",
  "solidity.defaultCompiler": "remote",
  "solidity.formatter": "prettier",
  "solidity.packageDefaultDependenciesContractsDirectory": "contracts",
  "solidity.packageDefaultDependenciesDirectory": "node_modules",
  "solidity.telemetry": false,
  "solidity.validationDelay": 1000,
  // Prettier settings
  "prettier.configPath": ".prettierrc",
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,
  // ESLint settings
  "eslint.workingDirectories": [
    "."
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "solidity"
  ],
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  // Terminal settings
  "terminal.integrated.shell.linux": "/bin/bash",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  // Git settings
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.inputValidation": "warn",
  "git.inputValidationLength": 50,
  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/artifacts": true,
    "**/cache": true,
    "**/coverage": true,
    "**/diamond-abi": true,
    "**/diamond-typechain-types": true,
    "**/typechain-types": true,
    "**/reports": true,
    "**/.yarn": true,
    "**/dist": true,
    "**/flat": true,
    "**/*.log": true
  },
  // Files settings
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/artifacts": true,
    "**/cache": true,
    "**/coverage": true,
    "**/diamond-abi": true,
    "**/diamond-typechain-types": true,
    "**/typechain-types": true,
    "**/reports": true,
    "**/.yarn": true,
    "**/dist": true,
    "**/flat": true,
    "**/*.log": true
  },
  // File watching settings
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/artifacts/**": true,
    "**/cache/**": true,
    "**/coverage/**": true,
    "**/diamond-abi/**": true,
    "**/diamond-typechain-types/**": true,
    "**/typechain-types/**": true,
    "**/reports/**": true,
    "**/.yarn/**": true,
    "**/dist/**": true,
    "**/flat/**": true,
    "**/*.log": true
  },
  // Debug settings
  "debug.node.autoAttach": "on",
  "debug.javascript.usePreview": true,
  // Extension settings
  "extensions.ignoreRecommendations": false,
  // Workspace settings
  "workspace.trust.enabled": false,
  // Security settings
  "security.workspace.trust.untrustedFiles": "open",
  // Jupyter settings (for data analysis if needed)
  "jupyter.askForKernelRestart": false,
  "jupyter.disableJupyterAutoStart": true,
  // Python settings (for security tools)
  "python.defaultInterpreterPath": "python3",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  // Go settings (for OSV-Scanner)
  "go.useLanguageServer": true,
  "go.formatTool": "gofmt",
  // YAML settings
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml",
    "https://json.schemastore.org/github-action.json": ".github/action.yml"
  },
  // JSON settings
  "json.schemas": [
    {
      "fileMatch": [
        "hardhat.config.json"
      ],
      "url": "https://json.schemastore.org/hardhat.json"
    },
    {
      "fileMatch": [
        "tsconfig.json"
      ],
      "url": "https://json.schemastore.org/tsconfig.json"
    },
    {
      "fileMatch": [
        ".eslintrc.json"
      ],
      "url": "https://json.schemastore.org/eslintrc.json"
    }
  ],
  // Task settings
  "task.quickOpen.history": 10,
  "task.quickOpen.detail": true,
  // Window settings
  "window.zoomLevel": 0,
  "window.openFilesInNewWindow": "default",
  // Workbench settings
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",
  // Breadcrumb settings
  "breadcrumbs.enabled": true,
  // Status bar settings
  "workbench.statusBar.visible": true,
  // Activity bar settings
  "workbench.activityBar.visible": true,
  // Settings sync (disabled for security)
  "settingsSync.ignoredExtensions": [
    "ms-vscode.vscode-json",
    "ms-vscode.vscode-typescript-next"
  ],
  // Custom settings for Diamonds project
  "hardhat.telemetry": false,
  "solidity.remappings": [
    "@openzeppelin/=node_modules/@openzeppelin/"
  ],
  // Error lens settings
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.excludeBySource": [
    "cSpell"
  ],
  // Spell checker settings
  "cSpell.language": "en",
  "cSpell.enabledLanguageIds": [
    "typescript",
    "javascript",
    "solidity",
    "json",
    "markdown",
    "yaml"
  ],
  "cSpell.words": [
    "typechain",
    "hardhat",
    "diamond",
    "erc",
    "gnus",
    "dao",
    "multichain",
    "semgrep",
    "slither",
    "snyk",
    "osv",
    "socketdev",
    "gitsecrets",
    "husky",
    "lintstaged",
    "precommit",
    "blockchain",
    "smartcontract",
    "web3",
    "ethers",
    "metamask",
    "infura",
    "alchemy",
    "sepolia",
    "mainnet",
    "testnet"
  ]
}